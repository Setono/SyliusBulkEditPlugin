<div class="ui stackable two column grid">
    <div class="column">
        {% import '@SyliusUi/Macro/headers.html.twig' as headers %}

        {{ headers.default('setono_sylius_bulk_edit.ui.bulk_edit'|trans, 'list', 'setono_sylius_bulk_edit.ui.bulk_edit_products'|trans) }}
    </div>

    <div class="right aligned column">
        <form action="" method="get" class="channel-selector">
            <select name="channelCode" class="ui dropdown">
                {% for channel in channels %}
                    <option value="{{ channel.code }}"{{ currentChannelCode == channel.code ? ' selected' }}>{{ channel.name }}</option>
                {% endfor %}
            </select>
        </form>
    </div>
</div>
